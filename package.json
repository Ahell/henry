{
  "name": "henry-course-planner",
  "type": "module",
  "version": "1.0.0",
  "description": "Henry Course Planner - Full-stack kursplaneringsapp f√∂r FEI",
  "scripts": {
    "dev": "concurrently -n \"CLIENT,SERVER\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "cd server && node --watch --watch-path=server.js --watch-path=router --watch-path=services --watch-path=utils --watch-path=data --watch-path=db server.js",
    "build": "vite build",
    "preview": "vite preview",
    "server": "cd server && node server.js",
    "start": "npm run server",
    "clean": "rm -rf dist node_modules server/node_modules henry.db server/henry.db server/db/henry.db server/var/henry.db",
    "install:server": "cd server && npm install",
    "postinstall": "npm run install:server"
  },
  "keywords": [
    "course-planning",
    "education",
    "lit",
    "webcomponents",
    "express",
    "sqlite"
  ],
  "author": "FEI",
  "license": "MIT",
  "dependencies": {
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-basic-ssl": "^1.0.0",
    "concurrently": "^8.2.2",
    "vite": "^5.0.7"
  }
}
